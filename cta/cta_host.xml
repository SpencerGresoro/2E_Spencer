      <number_ct_crosslink name="initresult">
        <anchored to="leftanchor" width="30" height="20">
          <top parent="name" anchor="bottom" offset="5" />
          <left anchor="right" relation="relative" offset="0" />
        </anchored>
        <hideonvalue>0</hideonvalue>
        <!-- <tabtarget prev="name" next="hptotal" /> -->
        <tabtarget prev="name" next="hpcurrent" />
      </number_ct_crosslink>
      <cta_below_label name="initresult_lable">
        <static textres="cta_selected_initresult_label" />
        <anchored to="initresult" />
      </cta_below_label>

      <number_ct name="hpcurrent">
        <font>font-hpcurrent</font>
        <anchored to="leftanchor" width="30" height="20">
          <top parent="name" anchor="bottom" offset="5" />
          <left anchor="right" relation="relative" offset="5" />
        </anchored>
        <tabtarget prev="initresult" next="hptemp" />
        <script>
          function onInit()
            window.onHealthChanged();
            onValueChanged();
          end
          function onDoubleClick(x,y)
            local node = window.getDatabaseNode();
            if Input.isControlPressed() then
              local rActor = ActorManager.resolveActor(node);
              local bIsNPC = (not ActorManager.isPC(rActor));
              if bIsNPC then
                Interface.openWindow("cta_npc_hpadjust", node);
                return true;
              end
            else
              Interface.openWindow("cta_healthadjust", node);
              return true;
            end
          end      
          function handleDrop(draginfo)
            if draginfo.getType() == "number" then
              local node = window.getDatabaseNode();
              local rActor = ActorManager.resolveActor(node);
              ActionDamage.applyDamage(nil, rActor, CombatManager.isCTHidden(node), draginfo.getDescription(), draginfo.getNumberData());
            end
          end
          function onValueChanged()
            local node = window.getDatabaseNode();
            local rActor = ActorManager.resolveActor(node);
            local bIsNPC = (not ActorManager.isPC(rActor));

            local nHPMax = DB.getValue(node,"hptotal",0);
            local nHPWounds = DB.getValue(node,"wounds",0);
            local sBaseToolTipText = Interface.getString("cta_hpcurrent_tooltip_npc");
            if not bIsNPC then
              sBaseToolTipText = Interface.getString("cta_hpcurrent_tooltip_pc");
              local nodeChar = CombatManagerADND.getNodeFromCT(node);
              nHPMax = DB.getValue(nodeChar,"hp.total",0);
              nHPWounds = DB.getValue(nodeChar,"hp.wounds",0);
            end
            local sAdditionalText = "\r" .. nHPMax .. " [MAX HP]\r" .. nHPWounds .. " [WOUNDS]";
            setTooltipText(sBaseToolTipText .. sAdditionalText);
          end
        </script>
        <readonly />
        <tooltip textres="cta_hpcurrent_tooltip" />
      </number_ct>
      <cta_below_label name="hptotal_lable">
        <static textres="cta_selected_hptotal_label" />
        <!-- <anchored to="hptotal" /> -->
        <anchored to="hpcurrent" />
      </cta_below_label>

      <number_ct_crosslink name="hptemp">
        <anchored to="leftanchor" width="30" height="20">
