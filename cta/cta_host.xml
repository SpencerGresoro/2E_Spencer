      <label name="label_healthadjust_amount">
        <anchored to="columnanchor" position="belowleft" offset="20,15" width="300" height="45" />
        <multilinespacing>20</multilinespacing>
        <static textres="ct_healthadjustment_detail" />
      </label>

      <basicnumber name="healthadjustment">
        <anchored to="label_healthadjust_amount" position="belowleft" offset="120,15" width="55" height="20" />
        <hideonvalue value="0" />
        <script>
        --[[ edit wounds by double clicking the current hp in the ct ]]
          function applyChange(sAdjustmentType)
            local node = window.getDatabaseNode();
            local isPC = (ActorManager.isPC(ActorManager.resolveActor(node)));            
            local nAdjustment = self.getValue();
            if (sAdjustmentType == "heal") then
              nAdjustment = -(nAdjustment);
            end
            local sWoundsPath = "wounds";
            local nWoundsCurrent = DB.getValue(node,"wounds",0);
            local nWoundsResult = nWoundsCurrent+nAdjustment;
            if nWoundsResult &lt; 0 then
              nWoundsResult = 0;
            end
            DB.setValue(node,"wounds","number", nWoundsResult);
            if isPC then 
              local nodeChar = CombatManagerADND.getNodeFromCT(node);
              DB.setValue(nodeChar,"hp.wounds","number", nWoundsResult);
            end
            
            local rDMMsg = {font = "msgfont"};
            rDMMsg.text = DB.getValue(node,"name","") .. "'s health adjusted by " .. UtilityManagerADND.getNumberSign(-(nAdjustment));            
            ActionsManager.outputResult(true, nil, nil, rDMMsg, nil);
            setValue(0);
            window.close();
          end
        </script>
      </basicnumber>
      <label_fieldtop name="label_healthadj_top">
        <anchored to="healthadjustment" />
        <static textres="ct_healthadjustment_input" />
      </label_fieldtop>

      <buttoncontrol name="healthadjustdamage">
        <anchored to="healthadjustment" position="belowleft" offset="-30,5" width="35" height="20" />
        <icon normal="button_dialog_check_red" pressed="button_dialog_ok" />
        <script>
          function onButtonPress(x, y)
